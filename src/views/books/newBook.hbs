<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nuevo Libro</h3>
        </div>
        <div class="card-body">
            <form action="/books/new-book" method="post">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="author" class="form-control" placeholder="Autor">
                </div>
                <div class="form-group">
                    <input type="text" name="year" class="form-control" placeholder="Año de publicación">
                </div>
                <div class="form-group">
                    <input type="text" name="status" class="form-control" placeholder="Estado">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>